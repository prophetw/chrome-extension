{
  "manifest_version": 3,
  "name": "FetchVideo - 视频下载器",
  "version": "0.1.0",
  "description": "智能检测并下载网页视频流，支持多种格式和流媒体协议",
  
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "webRequest",
    "contextMenus",
    "notifications"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/utils.js", "scripts/video-detector.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FetchVideo - 视频下载器",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["scripts/*.js"],
      "matches": ["*://*/*"]
    }
  ]
}
