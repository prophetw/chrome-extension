{
  "manifest_version": 3,
  "name": "自定义搜索扩展",
  "version": "1.0",
  "description": "右键菜单中添加自定义搜索功能",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "自定义搜索设置"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
